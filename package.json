{
  "name": "sts-stat-viewer",
  "version": "0.1.0",
  "description": "Slay the Spire Statistics Viewer - Analyze your runs with beautiful visualizations",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "WEBKIT_DISABLE_COMPOSITING_MODE=1 WEBKIT_DISABLE_DMABUF_RENDERER=1 tauri dev",
    "tauri:dev:gpu": "WEBKIT_DISABLE_COMPOSITING_MODE=0 WEBKIT_DISABLE_DMABUF_RENDERER=0 tauri dev",
    "generate:api": "openapi-typescript ./openapi/api.yaml -o ./src/lib/api/schema.d.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "license": "MIT",
  "dependencies": {
    "@appulsauce/svelte-grid": "^2.0.2",
    "@observablehq/plot": "^0.6.16",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "d3": "^7.9.0",
    "effect": "^3.19.14",
    "openapi-fetch": "^0.13.5",
    "ts-pattern": "^5.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.50.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tauri-apps/cli": "^2",
    "@types/d3": "^7.4.3",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.24",
    "jsdom": "^27.4.0",
    "openapi-typescript": "^7.4.4",
    "postcss": "^8.4.49",
    "svelte": "^5.49.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
